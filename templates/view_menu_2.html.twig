{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div id="main" class="container-fluid">
        <div class="row">
            <div id="sidebar-left" class="col-xs-2 col-sm-2">
                {{
                render(
                    controller(
                        'App\\Controller\\MenuController::index',
                        {
                            route: route
                        }
                    )
                )
                }}
            </div>

            <div class="col-xs-12 col-sm-10" style="background-color: white">
                <div class="row">
                    <div id="breadcrumb" class="col-xs-12">
                        <a href="#" class="show-sidebar">
                            <i class="fa fa-bars"></i>
                        </a>
                        <ol class="breadcrumbpanel pull-left"><a href="#">{{ 'breadcrumbs.index' | trans }}</a>
                        </ol>
                    </div>
                </div>
                <h1>{{ titulo }}</h1>
                <div id="root"></div>
                <div class="row-fluid">
                    <div class="col-xs-12 col-sm-12 text-center">
                        <div class="row" style="visibility: visible; position: relative;">
                            <br>
                            {% for entrada in restoMenu %}
                                <div style="margin-top: 20px;" class="col-sm-12 col-md-12">
                                    <h2>{{ entrada.categoria | nl2br }}</h2>
                                </div>

                                {% for item in entrada.items %}
                                    <div class="row col-sm-12 col-md-12">
                                        <div style="margin-top: 20px;" class="col-sm-3 col-md-3 text-left">&nbsp;</div>
                                        <div style="margin-top: 20px;" class="col-sm-3 col-md-3  text-left">
                                            <h4><b>{{ item.label | nl2br }}</b></h4>
                                            <h4><i>{{ item.descripcion | nl2br }}</i></h4>
                                        </div>
                                        {% if item.price is defined %}
                                            <div style="margin-top: 20px;" class="col-sm-3 col-md-3  text-right">
                                                <h4>{{ item.price | nl2br }} â‚¬</h4>
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                                <div style="margin-bottom: 20px;">&nbsp;</div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



