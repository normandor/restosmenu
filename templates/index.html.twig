{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div id="main" class="container-fluid">
        <div class="row">
            <div id="sidebar-left" class="col-xs-2 col-sm-2">
                {{
                render(
                    controller(
                        'App\\Controller\\MenuController::index',
                        {
                            route: route
                        }
                    )
                )
                }}
            </div>

            <div id="content" class="col-xs-12 col-sm-10">
                <div class="row">
                    <div id="breadcrumb" class="col-xs-12">
                        <a href="#" class="show-sidebar">
                            <i class="fa fa-bars"></i>
                        </a>
                        <ol class="breadcrumbpanel pull-left"><a href="#">{{ 'breadcrumbs.index' | trans }}</a>
                        </ol>
                    </div>
                </div>
                <h1>{{ 'index.welcomemessage' | trans }} </h1>
                <h3 style="margin: 30px 0px 30px 0px">{{ 'index.no_data_available' | trans }} </h3>
                <div id="root"></div>

                <div class="row-fluid">

                    <div id="dashboard_tabs" class="col-xs-12 col-sm-12">
                        <div id="dashboard-incidentes" class="row" style="visibility: visible; position: relative;">
                            {% for line in lines %}
                                <div style="margin-top: 20px;" class="col-sm-12 col-md-12">
                                    <h4 class="page-header">{{ line.title | nl2br }}</h4>
                                </div>
                                {% for graph in line.charts %}
                                    <div align="center" class="col-sm-12 col-md-6">
                                        <div id="{{ graph.divId }}" style="width: 600px;height:250px;"></div>
                                        <div class="h5 text-center">{{ graph.title }}</div>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{#    <script src="build/js/echarts.min.js"></script>#}
{#    <script src="build/js/data_line_total.js" type="text/javascript"></script>#}
{#    <script src="build/js/data_line.js" type="text/javascript"></script>#}
{% endblock %}



